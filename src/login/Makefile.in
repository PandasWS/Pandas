
COMMON_H = $(shell ls ../common/*.hpp)
COMMON_AR = ../common/obj/common.a
COMMON_INCLUDE = -I../common

LIBCONFIG_H = $(shell ls ../../3rdparty/libconfig/*.h)
LIBCONFIG_AR = ../../3rdparty/libconfig/obj/libconfig.a
LIBCONFIG_INCLUDE = -I../../3rdparty/libconfig

LOGIN_OBJ = $(shell ls *.cpp | sed -e "s/\.cpp/\.o/g")
LOGIN_DIR_OBJ = $(LOGIN_OBJ:%=obj/%)
LOGIN_H = $(shell ls *.hpp)

#####################################################################
# BEGIN - 在 Pandas 中我们需要 GOOGLE BREAKPAD 来生成转储文件
#####################################################################
BREAKPAD_H = $(shell find ../../3rdparty/breakpad/ -type f -name "*.h")
BREAKPAD_AR = ../../3rdparty/breakpad/src/client/linux/libbreakpad_client.a
BREAKPAD_INCLUDE = -I../../3rdparty/breakpad/src
#####################################################################
# END - 在 Pandas 中我们需要 GOOGLE BREAKPAD 来生成转储文件
#####################################################################

HAVE_MYSQL=@HAVE_MYSQL@
ifeq ($(HAVE_MYSQL),yes)
	SERVER_DEPENDS=login-server
else
	SERVER_DEPENDS=needs_mysql
endif
ALL_DEPENDS=server

#####################################################################
# BEGIN - 在 Pandas 中 Login-server 也需要 PCRE 库的支持
#####################################################################
HAVE_PCRE=@HAVE_PCRE@
ifeq ($(HAVE_PCRE),yes)
	PCRE_CFLAGS=-DPCRE_SUPPORT @PCRE_CFLAGS@
else
	PCRE_CFLAGS=
endif
#####################################################################
# END - 在 Pandas 中 Login-server 也需要 PCRE 库的支持
#####################################################################

@SET_MAKE@

#####################################################################
.PHONY :all server clean help

all: $(ALL_DEPENDS)

server: $(SERVER_DEPENDS)

clean:
	@echo "	CLEAN	login"
	@rm -rf *.o obj ../../@OLOG@@EXEEXT@

help:
	@echo "possible targets are 'server' 'all' 'clean' 'help'"
	@echo "'server'    - login server"
	@echo "'all'       - builds all above targets"
	@echo "'clean'     - cleans builds and objects"
	@echo "'help'      - outputs this message"

#####################################################################

needs_mysql:
	@echo "MySQL not found or disabled by the configure script"
	@exit 1

# object directories

obj:
	@echo "	MKDIR	obj"
	@-mkdir obj

#executables

login-server: obj $(LOGIN_DIR_OBJ) $(COMMON_AR) $(BREAKPAD_AR)
	@echo "	LD	@OLOG@@EXEEXT@"
	@@CXX@ @LDFLAGS@ -o ../../@OLOG@@EXEEXT@ $(LOGIN_DIR_OBJ) $(COMMON_AR) $(LIBCONFIG_AR) $(BREAKPAD_AR) @LIBS@ @MYSQL_LIBS@

# login object files

obj/%.o: %.cpp $(LOGIN_H) $(COMMON_H) $(LIBCONFIG_H) $(BREAKPAD_H)
	@echo "	CXX	$<"
#####################################################################
# 下面被注释的一行是 rAthena 的原始代码
#####################################################################
#	@@CXX@ @CXXFLAGS@ $(COMMON_INCLUDE) $(LIBCONFIG_INCLUDE) -DWITH_SQL @MYSQL_CFLAGS@ @CPPFLAGS@ -c $(OUTPUT_OPTION) $<
#####################################################################
# BEGIN - 添加 $(PCRE_CFLAGS) 和 $(BREAKPAD_INCLUDE)
#####################################################################
	@@CXX@ @CXXFLAGS@ $(COMMON_INCLUDE) $(LIBCONFIG_INCLUDE) $(BREAKPAD_INCLUDE) $(PCRE_CFLAGS) -DWITH_SQL @MYSQL_CFLAGS@ @CPPFLAGS@ -c $(OUTPUT_OPTION) $<
#####################################################################
# END - 添加 $(PCRE_CFLAGS) 和 $(BREAKPAD_INCLUDE)
#####################################################################

# missing object files
$(COMMON_AR):
	@$(MAKE) -C ../common server

$(LIBCONFIG_AR):
	@$(MAKE) -C ../../3rdparty/libconfig

$(BREAKPAD_AR):
	@$(MAKE) -C ../../3rdparty/breakpad
